<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel border="true" bottom="-409" enabled="true" follows="left|top|right|bottom"
     height="408" label="Input &amp; Camera" left="102" mouse_opaque="true"
     name="Input panel" width="517">
	<text name="mouselook_options" type="string" length="1" enabled="true" mouse_opaque="true"
	 bg_visible="false" border_drop_shadow_visible="false" border_visible="false" drop_shadow_visible="true"
	 font="SansSerifSmall" v_pad="0" h_pad="0" halign="left"
	 bottom="-25" left="10" height="17" width="110" follows="left|top">
		Mouselook Options:
	</text>
	<slider name="mouse_sensitivity" label="Mouse Sensitivity" control_name="MouseSensitivity"
	 enabled="true" mouse_opaque="true" min_val="0.25" max_val="15" increment="0.25" show_text="false"
	 bottom_delta="0" left="132" height="16" width="260" label_width="125" follows="left|top" />
	<check_box name="invert_mouse" label="Invert Mouse" control_name="InvertMouse"
	 radio_style="false" enabled="true" mouse_opaque="true" font="SansSerifSmall"
	 bottom_delta="-20" left="130" height="16" width="370" follows="left|top" />
	<check_box name="avatar_in_mouselook" label="Show Avatar in Mouselook" control_name="FirstPersonAvatarVisible"
	 radio_style="false" enabled="true" mouse_opaque="true" font="SansSerifSmall"
	 bottom_delta="-20" left_delta="0" height="16" width="370" follows="left|top" />
	<text name="camera_options" type="string" length="1" enabled="true" mouse_opaque="true"
	 bg_visible="false" border_drop_shadow_visible="false" border_visible="false" drop_shadow_visible="true"
	 font="SansSerifSmall" v_pad="0" h_pad="0" halign="left"
	 bottom_delta="-30" left="10" height="17" width="110" follows="left|top">
		Camera Options:
	</text>
	<slider name="camera_fov" label="Camera View Angle" control_name="CameraAngle"
	 enabled="true" mouse_opaque="true" min_val=".17" max_val="2.97" increment=".025" show_text="false"
	 bottom_delta="0" left="134" height="16" width="260" label_width="125" follows="left|top" />
	<slider name="camera_offset_scale" label="Camera Follow Distance" control_name="CameraOffsetScale" 
	 enabled="true" mouse_opaque="true" min_val=".5" max_val="3" increment=".025" show_text="false"
	 bottom_delta="-20" left_delta="0" height="16" width="260" label_width="125" follows="left|top" />
	<check_box name="camera_ignore_collisions" label="Do not move the camera out of objects on collision" control_name="CameraIgnoreCollisions"
	 radio_style="false" enabled="true" mouse_opaque="true" font="SansSerifSmall"
	 bottom_delta="-20" left="130" height="16" width="370" follows="left|top" />
	<check_box name="edit_camera_movement" label="Automatic Edit Camera Movement" control_name="EditCameraMovement"
	 radio_style="false" enabled="true" mouse_opaque="true" font="SansSerifSmall"
	 tool_tip="Use automatic camera positioning when entering and exiting edit mode"
	 bottom_delta="-20" left_delta="0" height="16" width="370" follows="left|top" />
	<check_box name="edit_camera_movement" label="Automatic Appearance Camera Movement" control_name="AppearanceCameraMovement"
	 radio_style="false" enabled="true" mouse_opaque="true" font="SansSerifSmall"
	 tool_tip="Use automatic camera positioning while in avatar appearance edit mode"
	 bottom_delta="-20" left_delta="0" height="16" width="370" follows="left|top" />
	<text name="keyboard_options" type="string" length="1" enabled="true" mouse_opaque="true"
	 bg_visible="false" border_drop_shadow_visible="false" border_visible="false" drop_shadow_visible="true"
	 font="SansSerifSmall" v_pad="0" h_pad="0" halign="left"
	 bottom_delta="-30" left="10" height="17" width="110" follows="left|top">
		Keyboard Options:
	</text>
	<check_box name="automatic_fly" label="Auto fly/land on holding PgUp/PgDown (or up/down controls)" control_name="AutomaticFly"
	 radio_style="false" enabled="true" mouse_opaque="true" font="SansSerifSmall"
	 bottom_delta="0" left="130" height="16" width="370" follows="left|top" />
	<check_box name="arrow_keys_move_avatar_check" control_name="ArrowKeysMoveAvatar"
	 radio_style="false" enabled="true" mouse_opaque="true"
	 label="Arrow keys always move avatar, even when typing in chat bar" font="SansSerifSmall"
	 tool_tip="When this setting is checked, the arrow keys always move the avatar around even when some text is already typed in the chat bar, but then you cannot move the cursor in the text of the chat bar with the left and right keys, which can be a nuisance when correcting typos (you yet still can position the cursor with the mouse)"
	 bottom_delta="-20" left_delta="0" height="16" width="400" follows="left|top" />
	<text name="joystick_options" type="string" length="1" enabled="true" mouse_opaque="true"
	 bg_visible="false" border_drop_shadow_visible="false" border_visible="false" drop_shadow_visible="true"
	 font="SansSerifSmall" v_pad="0" h_pad="0" halign="left"
	 bottom_delta="-35" left="10" height="17" width="110" follows="left|top">
		Joystick:
	</text>
	<button name="joystick_setup_button" label="Joystick Setup" font="SansSerif" mouse_opaque="true"
	 bottom_delta="0" left="134" height="20" width="120" follows="left|top" />
</panel>
